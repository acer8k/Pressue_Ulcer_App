<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main"
    android:background="#ff979598"
    android:minHeight="@dimen/abc_action_bar_default_height_material"
    android:minWidth="@dimen/abc_action_bar_stacked_tab_max_width">

    <!-- Header aligned to top -->
        <RelativeLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_gravity="center"
    android:background="#ff0c050d"
    android:gravity="center">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:text="--Pressure Ulcer Guide--"
    android:textColor="#ffff3536"
    android:textSize="22sp"

        android:autoText="false"
        android:textStyle="bold"
        android:id="@+id/pu" />
    </RelativeLayout>

    <Button
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="What is Pressure Ulcer?"
        android:id="@+id/button1"
        android:layout_marginTop="16dp"
        android:onClick="WPU"
        android:background="#ffffd841"
        android:layout_below="@+id/header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="Pressure Ulcer Stages"
        android:id="@+id/button2"
        android:background="#ffffd841"
        android:layout_alignTop="@+id/button1"
        android:layout_alignRight="@+id/header"
        android:layout_alignEnd="@+id/header" />

    <Button
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="Are you at Risk"
        android:id="@+id/button3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffd841" />

    <Button
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="How to Prevent it"
        android:id="@+id/button4"
        android:layout_below="@+id/button2"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:background="#ffffd841" />

    <Button
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="Some Additional Tips and Facts"
        android:id="@+id/button5"
        android:layout_below="@+id/button3"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:background="#ffffd841" />

    <Button
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:text="Contact a Medical Professional"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:background="#ffffd841" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- References"
        android:id="@+id/buttonref"
        android:layout_marginTop="10dp"
        android:onClick="openref"
        android:background="#ff0c050d"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:textColor="#ffa81515" />

    <!--
        <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->

    </RelativeLayout>
